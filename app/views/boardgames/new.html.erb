<ul>
  <li><%= link_to "Back to the main page", root_path %>
  <li><%= link_to "Add a new win", new_game_path %>
</ul>

<h1>New Boardgame</h1>
<p>Add a new boardgame in this form to be able to select it in on the winner page!</p>

<%= form_with model: @boardgame do |form| %>
  <div>
    <%= form.label :title, "Enter the game name!" %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <p> Should this game count as a ranked game?</p>
    <%= form.label :ranked, "True" %>
    <%= form.radio_button :ranked, "True" %><br>
    <%= form.label :ranked, "False" %>
    <%= form.radio_button :ranked, "False" %><br>
  </div>

  <div>
    <%= form.submit "Add a boardgame to the list!" %>
  </div>
<% end %>