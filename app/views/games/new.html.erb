<ul>
  <li><%= link_to "Back to the main page", root_path %>
  <li><%= link_to "Add a new game", new_boardgame_path %>
</ul>

<h1>New Win</h1>
<p>Add your win to the list by entering the required data!</p>

<%= form_with model: @game do |form| %>
  <div>
    <%= form.collection_select :boardgame_id, Boardgame.order(:title), :id, :title %>
  </div>

  <div>
    <%= form.label :winner %><br>
    <%= form.select :winner, ["Tobias", "Teresa"] %><br>
  </div>

  <div>
    <%= form.submit "Add a win!" %>
  </div>
<% end %>
